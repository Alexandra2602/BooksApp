<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BooksApp.Views.LoginPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Login"  >
    <ContentPage.Content>
        <ScrollView BindingContext="{Binding Login}">
            <StackLayout Padding="5">
                <Image Source="bookclub2.png"  Aspect="AspectFit" WidthRequest="130" HeightRequest="130"/>
                <Grid Margin="10,0" VerticalOptions="CenterAndExpand">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Label Text="E-mail"  VerticalOptions="Center" FontSize="18" Grid.Row="0" Grid.Column="0" />
                    <Entry Placeholder="Enter your email... " Margin="-7" Keyboard="Email" Grid.Row="0" Grid.Column="1" Text="{Binding Email,Mode=TwoWay}"/>
                    <Label Text="Password" VerticalOptions="Center" FontSize="18" Grid.Row="1" Grid.Column="0"/>
                    <Entry Placeholder="Enter your password.. " Margin="-7" IsPassword="True" Grid.Row="1" Grid.Column="1" Text="{Binding Password,Mode=TwoWay}"/>
                </Grid>
                <ActivityIndicator VerticalOptions="CenterAndExpand" IsRunning="{Binding IsRunning, Mode=TwoWay }">
                </ActivityIndicator>
                <StackLayout Margin="10,0" Orientation="Horizontal" VerticalOptions="CenterAndExpand">
                    <Label Text="Remember me on this device" HorizontalOptions="StartAndExpand" VerticalOptions="Center"/>
                    <Switch HorizontalOptions="End" IsToggled="{Binding IsRemembered, Mode=TwoWay}"/>
                </StackLayout>
                <Label Text="Forgot your password?" HorizontalOptions="Center"  TextColor="Blue" VerticalOptions="CenterAndExpand"/>
                <StackLayout Margin="20,0" Orientation="Horizontal">
                     <Button Text="Login" BackgroundColor="Navy" TextColor="White" BorderRadius="23" HeightRequest="46" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Command="{Binding LoginCommand}" IsEnabled="{Binding IsEnabled, Mode=TwoWay}">
                    </Button>
                    <Button Text="Register" BackgroundColor="Purple" TextColor="White" BorderRadius="23" HeightRequest="46" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" IsEnabled="{Binding IsEnabled, Mode=TwoWay}">
                    </Button>
            </StackLayout>
        
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="EndAndExpand">
                <Image Source="facebook.png" WidthRequest="100"></Image>
                <Image Source="instagram.png" WidthRequest="80"></Image>
                <Image Source="twitter.png" WidthRequest="80"></Image>

            </StackLayout>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>