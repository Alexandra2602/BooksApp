<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"

             x:Class="BooksApp.Views.BookDetailPage"
             Title="Book detail">
    <ContentPage.Content >
        <StackLayout BackgroundColor="#e0cc94">
            <Frame VerticalOptions="CenterAndExpand" Padding="3" Margin="10,90,10,80"  CornerRadius="15" HasShadow="False" BackgroundColor="#e8ddbe" HeightRequest="900">
                <Grid >

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions >
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <StackLayout Grid.Column="0" >
                        <Image Source="{x:Binding Book.Image}"  Margin="-12,10,0,0" HeightRequest="170" WidthRequest="150" Aspect="AspectFit"/>

                    </StackLayout>
                    <Label  TextColor="Black" FontAttributes="Bold" Margin="-17,0,0,0" Grid.Row="0" Grid.Column="1" HorizontalOptions="StartAndExpand" FontSize="16">Title:</Label>
                    <Label TextColor="Black" FontAttributes="Bold" Margin="-17,-140,0,0" Grid.Row="1" Grid.Column="1" HorizontalOptions="StartAndExpand" FontSize="16">Author:</Label>
                    <Label TextColor="Black" FontAttributes="Bold" Margin="-17,-100,0,0" Grid.Row="2" Grid.Column="1" HorizontalOptions="StartAndExpand" FontSize="16">Publisher:</Label>
                    <Label TextColor="Black" FontAttributes="Bold" Margin="-17,-70,0,0" Grid.Row="3" Grid.Column="1" HorizontalOptions="StartAndExpand" FontSize="16">Year Published:</Label>
                    <Label TextColor="Black" FontAttributes="Bold" Margin="-17,-30,0,0" Grid.Row="4" Grid.Column="1" HorizontalOptions="StartAndExpand" FontSize="16">Number of pages :</Label>
                    
             
                    <Label Text="{x:Binding Book.Title}" Grid.Row="0" Grid.Column="2"   TextColor="Black" FontSize="16" />
                    <Label Text="{x:Binding Book.Author}" Grid.Row="1" Grid.Column="2" Margin="0,-140,0,0" TextColor="Black" FontSize="16"/>
                    <Label Text="{x:Binding Book.Publisher}" Grid.Row="2" Grid.Column="2" Margin="0,-100,0,0" TextColor="Black" FontSize="16"/>
                    <Label Text="{x:Binding Book.YearPublished}" Grid.Row="3" Grid.Column="2" Margin="0,-60,0,0" TextColor="Black" FontSize="16"/>
                    <Label Text="{x:Binding Book.NumberOfPages}" Grid.Row="4" Grid.Column="2" Margin="0,-20,0,10" TextColor="Black" FontSize="16"/>

                    <Button x:Name="button1" Grid.Row="5" Grid.Column="0" HeightRequest="40"  Text="Read" TextColor="FloralWhite" BackgroundColor="#9a7c5b" Padding="10" Clicked="Read_Clicked"/>
                    <Button x:Name="button2" Grid.Row="6" Grid.Column="0" HeightRequest="40" Text="Reading" TextColor="FloralWhite" BackgroundColor="#9a7c5b" Clicked="Reading_Clicked"/>
                    <Button x:Name="button3" Grid.Row="7" Grid.Column="0" HeightRequest="40" Text="Dropped" TextColor="FloralWhite" BackgroundColor="#9a7c5b" Clicked="Dropped_Clicked"/>
                    <Button Grid.Row="7" Grid.Column="2" TextColor="Gray" Margin="0,-30,0,0" HeightRequest="20" WidthRequest="30" Clicked="Button_Clicked" Text="Back to the list" BackgroundColor="Transparent">
                    </Button>

                    
                </Grid>
            
        </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>